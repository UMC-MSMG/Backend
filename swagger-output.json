    "/api/settings/font-size/{userId}": {
      "get": {
        "tags": [
          "Settings"
        ],
        "summary": "글씨 크기 조회",
        "description": "사용자의 현재 글씨 크기 설정을 조회합니다.",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "조회할 사용자 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "글씨 크기 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "this_month_earnings": {
                      "type": "integer",
                      "example": 200,
                      "description": "이번 달 획득한 포인트"
                    },
                    "last_month_earnings": {
                      "type": "integer",
                      "example": 110,
                      "description": "지난 달 획득한 포인트"
                    },
                    "sequence_days": {
                      "type": "integer",
                      "example": 4,
                      "description": "연속 운동 일수"
                    },
                    "sequence_start": {
                      "type": "date",
                      "example": "2025-02-05T00:00:00.000Z",
                      "description": "연속 운동 시작일"
                    },
                    "sequence_end": {
                      "type": "date",
                      "example": "2025-02-08T11:02:46.103Z",
                      "description": "연속 운동 끝"
                    },
                    "weekly_exercise": {
                      "type": "object",
                      "properties": {
                        "monday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": false,
                          "description": "월요일 운동 여부"
                        },
                        "tuesday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": false,
                          "description": "화요일 운동 여부"
                        },
                        "wednesday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": true,
                          "description": "수요일 운동 여부"
                        },
                        "thursday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": true,
                          "description": "목요일 운동 여부"
                        },
                        "friday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": true,
                          "description": "금요일 운동 여부"
                        },
                        "saturday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": true,
                          "description": "토요일 운동 여부"
                        },
                        "sunday": {
                          "type": "boolean",
                          "nullable": true,
                          "example": false,
                          "description": "일요일 운동 여부"
                        }
                      }
                    },
                    "workout_level": {
                      "type": "string",
                      "example": "NORMAL"
                    },
                    "userId": {
                      "type": "integer",
                      "description": "사용자 ID"
                    },
                    "fontSize": {
                      "type": "integer",
                      "description": "현재 글씨 크기 (1: 기본, 2: 크게, 3: 아주 크게)"
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 실패 (토큰 없음)",
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
